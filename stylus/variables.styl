// radical mixins 

separator(x,y)
	border-bottom 1px x y

bdr(x)
	-webkit-border-radius x
	-moz-border-radius x
	border-radius x

border(x,y)
	border 1px x y

border-r(x,y)
	border-right 1px x y

zero()
	margin 0
	padding 0