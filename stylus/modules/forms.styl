.btn
button
.pushbutton-wide
.post-edit-link
.comment-reply-link
	font-family Karla
	padding 0.25em 0.5em
	border-radius 0

button
input
textarea
	background bg-senary
	border-all(solid, c-quarternary)
	line-height 1.5	
	-webkit-appearance none
	border-radius 0
	fz(1em)

input
textarea
	padding 7px 10px
	// height 18px
	width 100%
	-o-box-sizing border-box
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box
	&:hover
		border-color c-primary-light

button
input[type="submit"]
	background link
	color link-inverted
	width auto
	border none
	&:hover
		cursor pointer
		background bg-primary
		color link-inverted

.search-form
.subscribe-form
	overflow hidden
	margin-top 30px

.subscribe-form
	margin-top 15px

.search-form-input
.subscribe-form-input
	background bg-tertiary
	float left
	height 34px
	width 71%
	vertical-align middle
	font-family Karla
	border none
	color c-primary-dark
	fz(1.1em)
	&:hover
	&:focus
		background bg-senary

.subscribe-form-input
	width 80%

.search-form-submit
.subscribe-form-submit
	background bg-primary
	float right
	height 34px
	width 29%
	color link-inverted
	fz(1.1em)
	vertical-align middle
	padding 5px 10px
	&:hover
		background bg-senary
		color c-primary

.subscribe-form-submit
	width 20%

