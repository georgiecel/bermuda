.comments-list
	.comment-meta
		text-align left
		min-height 75px
		margin-left 75px

.comment
	margin-bottom 2em

.comment-gravatar
	margin 0 1em 1em 0
	float left
	padding 3px
	border(solid, c-quinary)

.avatar
	display block

.comment-author
	margin 0
	padding 0.25em 0 0 0

.comment-author-link
	text-decoration none

.comment-meta-item
	display block
	margin-top 0.25em
	text-transform none

.child-comments
	margin 1em 0 0 3em