.comments-list
	.comment-meta
		text-align left
		min-height 75px
		margin-left 75px
	> .comment
		border-bottom 1px solid c-quarternary

.comment
	margin-bottom 2em
	padding-bottom 1em

.comment-gravatar
	margin 0 1em 1em 0
	float left
	padding 3px
	border-all(solid, c-quinary)

.avatar
	display block

.comment-author
	margin 0
	padding 0.25em 0 0 0

.comment-author-link
	text-decoration none

.comment-meta-item
	display block
	margin-top 0.25em
	text-transform none

.child-comments
	margin 1em 0 0 1.5em
	padding-left 1.5em
	border-left 1px solid c-quarternary-light
	> .comment 
		border-bottom none
		padding-bottom 0
		padding-top 1em