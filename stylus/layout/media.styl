@media (min-width: 600px)

	html
	body 
	p
	li
		font(1.05em)

	h1
		h1(1.75em)
		text-align center

	h2
		h2(1.5em)

	h3
		h3(1.45em)

	.site-content
		padding 1.25em 3em

	.post-thumbnail-wrapper
		float none
		margin 1em auto

	.post-thumbnail
		width auto
		height auto

	.attachment-post-thumbnail
		margin 0 auto

	.figure-alignright
		float right
		margin 1em 0 1em 1em
		clear both

	.figure-alignleft 
		float left
		margin 1em 1em 1em 0

	.figure-aligncenter
		margin 1em auto

	.site-footer
		background bg-tertiary
		text-align center

@media (min-width: 800px)

	html
	body 
	p
	li
		font(1.15em)
		line-height 1.75

	.site-header
		display none

	.site-sidebar
		display block

	.site-content
		float right
		width 71%
		padding 1.25em 2.5%

	.post-listing

		.post
			position relative

		.post-title
			margin 0.67em 0
			max-width none
			fz(2em)
			text-align left

		.post-content
			float none
			margin-bottom 1em
			width auto
			padding-right 0
			border-right none

		.post-meta
			text-align left
			float none
			overflow hidden
			width auto
			padding 0
			margin-top 0

		.post-meta-item
			margin 0 2em 0 0
			fz(0.95em)
			float left
			line-height 1

		.post-thumbnail-wrapper
			position static
			float right
			padding 3px
			height 150px
			width 150px
			border(dashed, c-quarternary)
			bdr(100px)

		.post-thumbnail
			height auto
			width auto
			margin 0

		.attachment-post-thumbnail
			margin 0

	.post figcaption
	.post-figcaption
	.wp-caption-text
		fz(1em)

	.post-figure + .post-figure
		margin-top 1.5em

@media (min-width: 1000px)

	p
	li
		font(1.2em)