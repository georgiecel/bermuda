@media (min-width: 600px)

	html
	body 
	p
		font(1.05em)

	h1
		h1(1.75em)
		text-align center

	h2
		h2(1.6em)

	h3
		h3(1.45em)

	.post
		position relative

	.post-content
		float left
		width 47%
		padding-right 4%
		border-right(solid, cquarternary)

	.post-meta
		text-align left
		float right
		width 20%
		padding 0 14%
		margin-top 13em

	.post-meta-item
		fz(1em)
		margin 1em 0

	.post-thumbnail-wrapper
		position absolute
		top 0
		right 0
		height 100px
		width 75px
		border(dashed, cquarternary)

	.post-thumbnail
		margin 2px
		height 96px
		width 71px
		overflow hidden

	.post-thumbnail-wrapper
		float none

	.attachment-post-thumbnail
		// bdr(100px)
		max-width none
		margin-top -30%
		margin-left -30%

@media (min-width: 850px)

	.site-sidebar
		display block

	.site-content
		float right
		width 75%