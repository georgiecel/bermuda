@media (min-width: 500px)

	html
	body 
	p
		font(1.05em)

	h1
		h1(1.75em)
		text-align center

	h2
		h2(1.6em)

	h3
		h3(1.45em)		

	.post-content
		float left
		width 50%

	.post-meta
		text-align center
		float right
		width 20%
		padding 0 15%

	.post-thumbnail-wrapper
		height 100px
		width 75px
		border(dashed, cquarternary)

	.post-thumbnail
		margin 2px
		height 96px
		width 71px
		overflow hidden

	.post-thumbnail-wrapper
		float none

	.attachment-post-thumbnail
		// bdr(100px)
		max-width none
		margin-top -30%
		margin-left -30%