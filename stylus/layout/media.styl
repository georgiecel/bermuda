@media (min-width: 600px)

	html
	body 
	p
	li
		font(1.05em)
		line-height 1.65

	h1
		h1(1.75em)
		text-align center
		margin 0.5em auto

	h2
		h2(1.5em)

	h3
		h3(1.45em)

	.site-content
		padding 1.25em 3em

	.post-meta
		text-align center

	.post-meta-item
		fz(0.8em)

	.post-thumbnail-wrapper
		float none
		margin 0.5em auto

	.post-thumbnail
		width 85px
		height 85px

	.attachment-post-thumbnail
		margin 0 auto

	.figure-alignright
	.post-content .alignright
		float right
		margin 1em 0 1em 1em
		clear both

	.figure-alignleft
	.post-content .alignleft 
		float left
		margin 1em 1em 1em 0

	.figure-aligncenter
		margin 1em auto

	.pagination
	.post-navigation
		fz(0.95em)

	.site-footer
		background bg-tertiary
		text-align center
		padding 1em 1.25em

@media (min-width: 700px)

	html
	body 
	p
	li
		font(1.175em)

@media (min-width: 850px)

	.site-header
		background bg-tertiary

	a.main-navigation-link
		display inline-block
		margin 0 0.5em

	.site-sidebar
		display block

	.site-content
		float left
		width 71%
		padding 1.25em 2.5%

	.post-title
		margin 0.6em 0
		fz(2em)
		& + .post-meta
			margin-top -0.5em

	.post-meta-item
		display inline-block
		margin 0 0.75em
		fz(0.95em)
		line-height 1

	.post-thumbnail-wrapper
		margin 1em auto
		padding 3px
		height 150px
		width 150px
		border-all(solid, c-quinary)
		bdr(100px)

	.post-thumbnail
		height auto
		width auto
		margin 0

	.post figcaption
	.post-figcaption
	.wp-caption-text
		fz(1em)

	.post-figure + .post-figure
		margin-top 1.5em

@media (min-width: 1000px)

	p
	li
		font(1.2em)

	.site-body
		max-width 80em
		margin 0 auto

	.site-content
		max-width 65em