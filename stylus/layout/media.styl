@media (min-width: 600px)

	html
	body 
	p
	li
		font(1.05em)
		line-height 1.65

	h1
		h1(1.75em)
		text-align center

	h2
		h2(1.5em)

	h3
		h3(1.45em)

	.site-content
		padding 1.25em 3em

	.post-meta
		text-align center

	.post-thumbnail-wrapper
		float none
		margin 1em auto

	.post-thumbnail
		width auto
		height auto

	.attachment-post-thumbnail
		margin 0 auto

	.figure-alignright
	.post-content .alignright
		float right
		margin 1em 0 1em 1em
		clear both

	.figure-alignleft
	.post-content .alignleft 
		float left
		margin 1em 1em 1em 0

	.figure-aligncenter
		margin 1em auto

	.pagination
	.post-navigation
		fz(0.95em)

	.site-footer
		background bg-tertiary
		text-align center

@media (min-width: 700px)

	html
	body 
	p
	li
		font(1.175em)

@media (min-width: 850px)

	.site-header
		display none

	.site-sidebar
		display block

	.site-content
		float right
		width 71%
		padding 1.25em 2.5%

	.post-listing

		.post-title
			margin 0.67em 0
			text-align left
			fz(2em)

		.post-meta
			text-align left
			overflow hidden
			width auto

		.post-meta-item
			margin 0 2em 0 0
			fz(0.95em)
			float left
			line-height 1

		.post-thumbnail-wrapper
			float right
			padding 3px
			height 150px
			width 150px
			border(solid, c-quinary)
			bdr(100px)

		.post-thumbnail
			height auto
			width auto
			margin 0

	.post figcaption
	.post-figcaption
	.wp-caption-text
		fz(1em)

	.post-figure + .post-figure
		margin-top 1.5em

@media (min-width: 1000px)

	p
	li
		font(1.2em)